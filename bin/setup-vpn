#!/usr/bin/env bash
set -e
source bin/_helpers
ensure-environment

echo "ðŸ”¢  Generating OpenVPN config..."
docker run --net=none --rm -it -v ${PWD}/private/ovpn0:/etc/openvpn kylemanna/openvpn:${APP_VERSION} ovpn_genconfig \
  -u ${VPN_URI} \
  -C 'AES-256-CBC' -a 'SHA384' \
  -b -n ${DNS_SERVER}

echo "ðŸ”‘  Initialising keys..."
docker run --net=none --rm -it -v ${PWD}/private/ovpn0:/etc/openvpn kylemanna/openvpn:${APP_VERSION} ovpn_initpki
docker run --net=none --rm -it -v ${PWD}/private/ovpn0:/etc/openvpn kylemanna/openvpn:${APP_VERSION} ovpn_copy_server_files

bin/set-secrets
bin/add-client
